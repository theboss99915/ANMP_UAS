<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageRestoRS"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtRestoNameRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="XXXXX"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageRestoRS"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtStatusRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="XXXXX"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageRestoRS"
                app:layout_constraintTop_toBottomOf="@+id/txtView1233" />

            <TextView
                android:id="@+id/txtView123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="60dp"
                android:text="Reservation :"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageRestoRS"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtResDayRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                android:text="XXXXXXX"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txtView123"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView1233"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Hours :"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageRestoRS"
                app:layout_constraintTop_toBottomOf="@+id/txtView123" />

            <TextView
                android:id="@+id/txtResHoursRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="XX.XX - XX.XX"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txtView1233"
                app:layout_constraintTop_toBottomOf="@+id/txtResDayRS" />

            <Button
                android:id="@+id/btnDetailRS"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="60dp"
                android:text="Detail"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageRestoRS"
                app:layout_constraintTop_toBottomOf="@+id/txtResHoursRS" />

            <ProgressBar
                android:id="@+id/progressBarRS"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/imageRestoRS"
                app:layout_constraintEnd_toEndOf="@+id/imageRestoRS"
                app:layout_constraintStart_toStartOf="@+id/imageRestoRS"
                app:layout_constraintTop_toTopOf="@+id/imageRestoRS" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>